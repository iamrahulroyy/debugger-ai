{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "PromptForge Template Schema v1.0",
    "title": "PromptTemplate",
    "type": "object",
    "required": [
        "id",
        "name",
        "description",
        "schema"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "category": {
            "type": "string",
            "enum": [
                "technical",
                "creative",
                "business",
                "academic",
                "general"
            ]
        },
        "schema": {
            "$ref": "prompt.schema.json"
        }
    }
}